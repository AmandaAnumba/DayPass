{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false
  },
  "filesGlob": [
    "app/**/*.ts",
    "!node_modules/**/*",
    "!build/**/*",
    "!typings/**/*",
    "!src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "src",
    "typings/main",
    "typings/main.d.ts"
  ]
}